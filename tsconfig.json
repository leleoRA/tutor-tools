{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "typeRoots": [
      "./src/@types/*",
      "./node_modules/@types"
    ],
    "paths": {
      "*": [
        "./node_modules/*",
        "./src/@types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}
